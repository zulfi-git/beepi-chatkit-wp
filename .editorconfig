# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{php,js,css}]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2
